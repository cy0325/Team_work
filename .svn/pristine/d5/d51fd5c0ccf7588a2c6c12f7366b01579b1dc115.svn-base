#override("content")
<article class="page-container">
	<form class="form form-horizontal" id="form-view">
	            		<input type="hidden" id="id" name="id" value="$!{WexinMenu.id}"/>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>父菜单：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<span class="select-box radius">
					<select id="fmenu" class="select" size="1" name="fid">
						<option value="1">一级菜单</option>
						#foreach($wm in $weixinMenus)
							#if($!{WexinMenu.fid} == $!{wm.id})
								<option value="$!{wm.id}" selected>$!{wm.menuname}</option>
							#else
								<option value="$!{wm.id}">$!{wm.menuname}</option>
							#end	
						#end
					</select>
				</span>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>菜单名称：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="menuname" name="menuname" type="text" class="input-text radius" value="$!{WexinMenu.menuname}" placeholder="请输入菜单名称" >
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>菜单链接：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="menuurl" name="menuurl" type="text" class="input-text radius" value="$!{WexinMenu.menuurl}" placeholder="请输入菜单链接" >
			</div>
		</div>
		
		<div class="row cl">
			<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">				
				<button type="submit" class="btn btn-danger radius" ><i class="Hui-iconfont">&#xe632;</i> 提交</button>
				<button onClick="layer_close();" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</article>
#end

#override("js")
<!--请在下方写此页面业务相关的脚本,首先需要引入juery.validate表单验证插件-->
<script type="text/javascript" src="/static/lib/jquery.validation/1.14.0/jquery.validate.js"></script> 
<script type="text/javascript" src="/static/lib/jquery.validation/1.14.0/validate-methods.js"></script> 
<script type="text/javascript" src="/static/lib/jquery.validation/1.14.0/messages_zh.js"></script>
<script type="text/javascript" src="/static/assets/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/static/assets/ckfinder/ckfinder.js"></script>
<script type="text/javascript">

	$(function() {
		//表单验证,如果有其他需要直接添加即可，比如可以填入digits:true必须输入数字，这个根据jquery.validate插件验证规则
		$("#form-view").validate(
		{
			rules : {
				fid : {
					required : true,
				},
				menuname : {
					required : true,
				},
				menutype : {
					required : true,
				},
				menuurl : {
					required : true,
					url:true
				},
				uid : {
					required : true,
				},
				uptime : {
					required : true,
				},
			},
			onkeyup : false,
			focusCleanup : true,
			success : "valid",
			submitHandler : function(form) {
				var param = $("#form-view").serialize(); //表单内容序列化
				$.ajax({
					url : '/WexinMenu/Save.do',
					type : 'POST',
					dataType : 'json',
					data : param,
					success : function(result) {
						if (result.success) {
							parent.layer.msg(result.msg, {
								icon : 1,
								time : 2500
							});
							//以下为关闭当前frame，并刷新父页面
							var index = parent.layer
									.getFrameIndex(window.name);
							parent.$("#pagecontent").load(
									window.parent.location.href
											+ "#pagecontent");//刷新父页面表格tbody
							parent.$("#mypage").load(
									window.parent.location.href
											+ "#mypage");//分页也需要刷新一下
							parent.layer.close(index);

						} else {
							layer.msg(result.msg, {
								icon : 2,
								time : 1500
							});
						}
					},
					error : function(data) {
						layer.msg("对不起，服务请求错误！", {
							icon : 2,
							time : 1500
						});
					}
				});
			}
		});

	})
</script>
#end
#extends("/Home/Layout.vm")