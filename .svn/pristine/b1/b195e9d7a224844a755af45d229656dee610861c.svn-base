#override("content")
<article class="page-container">
	<form class="form form-horizontal" id="form-view">
	            		<input type="hidden" id="id" name="id" value="$!{ShopCart.id}"/>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>商品ID：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="gid" name="gid" type="text" class="input-text" value="$!{ShopCart.gid}" placeholder="请输入商品ID" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>商品数量：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="gnum" name="gnum" type="text" class="input-text" value="$!{ShopCart.gnum}" placeholder="请输入商品数量" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>shop_user_id：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="suid" name="suid" type="text" class="input-text" value="$!{ShopCart.suid}" placeholder="请输入shop_user_id" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>操作时间：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="upTime" name="upTime" type="text" class="input-text" value="$!{ShopCart.upTime}" placeholder="请输入操作时间" >
			</div>
		</div>
						<div class="row cl">
			<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">				
				<button type="submit" class="btn btn-danger radius" ><i class="Hui-iconfont">&#xe632;</i> 提交</button>
				<button onClick="layer_close();" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</article>
#end
