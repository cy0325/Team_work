<!--请在下方写此页面业务相关的脚本,首先需要引入laypage插件-->
<script type="text/javascript" src="/static/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">

	$(function(){
		getpage(1);//调用分页
		/*每页显示条数变化*/
		$('#pageSize').change(function(){getpage(1);});          
	})
	function getpage(curr)//分页函数
	{	
		if($('#ckall').is(':checked')){$('#ckall').removeAttr("checked");}//翻页时取消全选状态
		var pageSize = $('#pageSize').val();//每页显示条数
		
		//如果有查询，请在此处获取查询参数，并传入下方的参数部分，例如 var condition=$('#condition').val();
		// 带查询条件进行翻页
		//var fid = $('#fid').val();
		var name = $('#name').val();
		var fid = $("#fid").find("option:selected").val();
		
		
		$.getJSON('/FoodsDetail/List.do', {page:curr,pagesizes:pageSize,name:name,fid:fid}, function(res){ //从第1页开始请求。返回的json格式可以任意定义
			laypage({
				cont: 'mypage', //容器。值支持id名、原生dom对象，jquery对象。
		        pages: Math.ceil(res.total/pageSize), //通过后台拿到的总页数
		        curr: curr, //初始化当前页
		        first: false,
  				last: false,
		        skip: true, //是否开启跳页
		        jump: function(obj,first){ //触发分页后的回调
		         if(!first){ //点击跳页触发函数自身，并传递当前页：obj.curr
                     getpage(obj.curr);
                 }
		        }
		    });
		     $('#total').html(res.total);//显示总数
		     $('#pagecontent').html(PackagData(res));//附加翻页内容
		});
	}
	function PackagData(res){//分页内容展示
		var content="";
	    $.each(res.data,function(i,o){
	        content+="<tr class=\"text-c\"><td >";
	        content+="<input type=\"checkbox\" value=\""+o.id+"\" name=\"ck\"/></td>";
	        	         	        	        content+="<td>"+o.lbName+"</td>";
	        	        	         	        content+="<td>"+o.foodsname+"</td>";
	        	        	         	       content+="<td><img width=\"75\" class=\"picture-thumb\" src="+ o.pic+"></td>"
	        	        	         	      //  content+="<td>"+o.pic+"</td>";
	        	        	         	      content+="<td>"+o.sprice+"</td>";
	        	        	         	        content+="<td>"+o.price+"</td>";
	        	        	         	       content+="<td>"+o.foodstutas+"</td>";
	        	        	         	        content+="<td>"+o.cpName+"</td>";
	        	        	         	        content+="<td>"+o.uptime+"</td>";
	        	        	        content+="<td class=\"td-manage\">";	        
	        content+="<a title=\"编辑\" href=\"javascript:;\" onclick=\"pub_edit('编辑','/FoodsDetail/FoodsDetailView.do?id="+o.id+"')\" class=\"ml-5\" style=\"text-decoration:none\"><i class=\"Hui-iconfont\">&#xe6df;</i></a>"; 
	        content+="<a title=\"删除\" href=\"javascript:;\" onclick=\"pub_del(this,"+o.id+")\" class=\"ml-5\" style=\"text-decoration:none\"><i class=\"Hui-iconfont\">&#xe6e2;</i></a>";
	        content+="</td></tr>";
	         
	    });
	    return content;
	}

/*添加*/
function pub_add(title,url){
	layer_maxshow(title,url);
}
/*编辑*/
function pub_edit(title,url){
	layer_maxshow(title,url);
}
/*删除*/
function pub_del(obj,id){
	layer.confirm('删除须谨慎，确认要删除吗？',function(){
		$.ajax({
			type: 'POST',
			url: '/FoodsDetail/Delete.do?id='+id,
			dataType: 'json',
			success: function(result){
				if(result.success)
				{
					$(obj).parents("tr").remove();				
					layer.msg(result.msg,{icon:1,time:1500});
				}else
				{
					layer.msg(result.msg,{icon:2,time:1500});
				}
			},
			error:function(data) {
				layer.msg("对不起，服务请求错误！",{icon:2,time:1500});
			}
		});		
	});
}
/*批量删除*/
function BatchDelete()
{	
	var ids = '';
	$('table input[type="checkbox"]:checked').each(function(){		
		ids += $(this).val() + ',';
	});
	layer.confirm('删除须谨慎，确认要删除吗？',function(){
		$.ajax({
			type: 'POST',
			url: '/FoodsDetail/BatchDelete.do?ids='+ids,
			dataType: 'json',
			success: function(result){
				if(result.success)
				{					    
					getpage(1);//批量删除成功后重新加载第一页							
					layer.msg(result.msg,{icon:1,time:1500});
				}else
				{
					layer.msg(result.msg,{icon:2,time:1500});
				}
			},
			error:function(data) {
				layer.msg("对不起，服务请求错误！",{icon:2,time:1500});
			}
		});		
	});
	
}
function search(){
	getpage(1);
	
}
