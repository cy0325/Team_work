<!--请在下方写此页面业务相关的脚本,首先需要引入juery.validate表单验证插件-->
<script type="text/javascript" src="/static/lib/jquery.validation/1.14.0/jquery.validate.js"></script> 
<script type="text/javascript" src="/static/lib/jquery.validation/1.14.0/validate-methods.js"></script> 
<script type="text/javascript" src="/static/lib/jquery.validation/1.14.0/messages_zh.js"></script>
<script type="text/javascript">

	$(function(){
		//表单验证,如果有其他需要直接添加即可，比如可以填入digits:true必须输入数字，这个根据jquery.validate插件验证规则
		$("#form-view").validate({
				rules:{
				 				  				 				  					ordernum:{
						required:true,
					},
				  				 				  					usid:{
						required:true,
					},
				  				 				  					tmoney:{
						required:true,
					},
				  				 				  					updateDate:{
						required:true,
					},
				  				 				  					payway:{
						required:true,
					},
				  				 				  					pid:{
						required:true,
					},
				  				 				  					poptime:{
						required:true,
					},
				  				 				  					orderstatus:{
						required:true,
					},
				  				 				  					sid:{
						required:true,
					},
				  				 				  					suptime:{
						required:true,
					},
				  				 				  					uid:{
						required:true,
					},
				  				 				  					optime:{
						required:true,
					},
				  				 				},
				onkeyup:false,
				focusCleanup:true,
				success:"valid",
				submitHandler:function(form){
				var param = $("#form-view").serialize(); //表单内容序列化
					 $.ajax({
					        url: '/FoodsOrder/Save.do',
					 		type: 'POST',
					 		dataType:'json',
							data:param,
			                success:function(result){
			                if(result.success)
							{
								parent.layer.msg(result.msg,{icon:1,time:2500});
								//以下为关闭当前frame，并刷新父页面
								var index = parent.layer.getFrameIndex(window.name);
								parent.$("#pagecontent").load(window.parent.location.href+"#pagecontent");//刷新父页面表格tbody
								parent.$("#mypage").load(window.parent.location.href+"#mypage");//分页也需要刷新一下
								parent.layer.close(index);
								
							}else
							{
								layer.msg(result.msg,{icon:2,time:1500});
							}
							},
							error:function(data) {
								layer.msg("对不起，服务请求错误！",{icon:2,time:1500});
							}
		                }); 
				  }
		});
		
	})
</script>
#end
